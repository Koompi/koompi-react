{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "plugins": ["jsx-a11y", "prettier"],
  "rules": {
    "jsx-a11y/label-has-associated-control": "off",
    "react/no-unescaped-entities": 0,
    "react/prop-types": 0,
    "semi": 0,
    "no-plusplus": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".jsx", ".js"] }],
    "prettier/prettier": [
      "error",
      {
        "semi": false
      }
    ]
  }
}
